      <div class="todos">
          <h1 align="center">Tambah User</h1>
        <div>
        <form class="form-horizontal" role="form" method="post" action="/user/new">
            <div class="form-group row mb-2 ml-2">
                <label for="full_name" class="control-label" >Full Name</label>
                <div class="col-md-9">
                    <input type="text" class="form-control ml-3" name="full_name" placeholder="Full Name" required>
                </div>
            </div>
            <div class="form-group row mb-2 ml-2">
                <label for="no_tlp" class="control-label">Phone</label>
                <div class="col-md-9">
                    <input type="number" class="form-control ml-5" name="no_tlp" placeholder="Mobile Number" required>
                </div>
            </div>
            <div class="form-group row mb-2 ml-2">
                <label for="for="exampleFormControlInput1 class="control-label">Email</label>
                <div class="col-md-9">
                    <input type="email" class="form-control ml-5" id="for="exampleFormControlInput1"" name="email" placeholder="Email" required>
                </div>
            </div>
            <div class="form-group row mb-2 ml-2">
                <label for="for="exampleFormControlInput1 class="control-label">Role User</label>
                <div class="col-md-9">
                    <select class="form-control ml-3" id="exampleFormControlSelect1" name="role_user">
                        <option>master</option>
                        <option>user</option>
                      </select>
                </div>
            </div>
            <div class="form-group row mb-2 ml-2">
                <label for="password" class="control-label">Password</label>
                <div class="col-md-9">
                    <input type="password" class="form-control ml-3" name="password" placeholder="Password" required maxlength="8" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Harus 8 karakter':''); if (this.checkValidity()) form.passwordMatch.pattern = this.value; " >
                    <i class="ml-5">Max 8 Character</i>
                </div>
            </div>
            <div class="form-group row mb-2 ml-2">
                <label for="passwordMatch" class="control-label">Re-Password</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" name="passwordMatch" placeholder="Re-Password" required maxlength="8" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Password tidak sama' : '');" onfocus="this.value=''" required>
                </div>
            </div>

            <div class="form-group">
                <!-- Button -->                                       
                <div class="col-md-offset-3 col-md-9">
                    <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Submit</button>  
                </div>
            </div> 
        </form>
      </div>
      </div>
